{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@containers/*": ["src/containers/*"],
            "@typings/*": ["src/typings/*"],
            "@pages/*": ["src/pages/*"],
            "@reducers/*": ["src/reducers/*"],
            "@actions/*": ["src/actions/*"],
            "@styled-components/*": ["src/styled-components/*"],
            "@icons/*": ["src/icons/*"],
            "@utils/*": ["src/utils/*"]
        },
        "downlevelIteration": true
    },
    "include": ["./src/**/*"]
}
